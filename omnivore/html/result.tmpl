<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <link rel="stylesheet" type="text/css" href="css/lkp.css">
      <link rel="stylesheet" type="text/css" href="css/chartist.min.css">
      <script type="text/javascript" src="js/chartist.min.js"></script>

      <title>"<!-- TMPL_VAR query-text -->" - Lookupy</title>
   </head>

   <body>
      <div class="columns is-gapless">
         <div class="column">

         <!-- TMPL_IF sites-stats -->
               <article class="panel is-info">
                  <p class="panel-heading">
                  Sites
                  </p>

                  <div class="ct-chart-sites ct-golden-section"></div>
               </article>
            <!-- /TMPL_IF -->

         <!-- TMPL_IF typical -->
               <article class="panel is-info">
                  <p class="panel-heading">
                  Common opinion
                  </p>

                  <!-- TMPL_LOOP typical -->
                  <div class="box">
                     <article class="media">
                        <div class="media-content">
                           <div class="content">
                              <p>
                              <!-- TMPL_VAR sent-text -->
                              <br>
                              <strong><!-- TMPL_VAR author --></strong>
                              <small><!-- TMPL_VAR date --></small>
                              <small><a href="<!-- TMPL_VAR url -->">
                              See on <!-- TMPL_VAR domain -->
                              </a></small>
                              </p>
                           </div>
                        </div>
                     </article>
                  </div>
                  <!-- /TMPL_LOOP -->
               </article>
         <!-- /TMPL_IF -->
         </div>


         <div class="column">
         <!-- Query bar -->
            <section class="hero is-dark">
               <div class="hero-body">
                  <div class="container">
                     <span class="title">
                        Report on: <em><!-- TMPL_VAR query-text --></em>
                     </span>
                  </div>
               </div>
            </section>

      <!-- Lookupy search bar -->
      <section class="hero">
         <div class="hero-body">
            <div class="container">
               <h1 class="subtitle">
                  Search further with Lookupy
               </h1>

               <!--
                  <h2 class="subtitle">
                  </h2>
               -->

               <form method="GET" action="/result">
                  <div class="field has-addons">
                     <div class="control">
                        <input class="input" type="text" placeholder="" name="q">
                     </div>
                     <div class="control">
                        <input class="button is-info" value="Go" type="submit">
                     </div>
                  </div>
               </form>

            </div>
         </div>
      </section>

      <!-- TMPL_IF phrases -->
                  <div class="ct-chart-trend ct-golden-section"></div>

               <article class="panel is-info">
                  <p class="panel-heading">
                  Hot phrases
                  </p>

                  <!-- TMPL_LOOP phrases -->
                  <div class="box">
                     <article class="media">
                        <div class="media-content">
                           <div class="content">
                              <strong class="is-size-5"><!-- TMPL_VAR phrase --></strong>
                              <br>
                              <ul>
                              <!-- TMPL_LOOP typical -->
                                 <li> <!-- TMPL_VAR sent-text -->
                                 &ndash; <a href="<!-- TMPL_VAR url -->">
                                 <!-- TMPL_VAR domain --></a>
                                 (<!-- TMPL_VAR author -->)
                                 <small><!-- TMPL_VAR date --></small></li>
                              <!-- /TMPL_LOOP -->
                              </ul>
                           </div>
                        </div>
                     </article>
                  </div>
                  <!-- /TMPL_LOOP -->
               </article>
         <!-- /TMPL_IF -->
         </div>

      <!-- TMPL_IF atypical -->
         <div class="column">


               <article class="panel is-info">
                  <p class="panel-heading">
                  Oddball posters
                  </p>

                  <!-- TMPL_LOOP atypical -->
                  <div class="box">
                     <article class="media">
                        <div class="media-content">
                           <div class="content">
                              <p>
                              <!-- TMPL_VAR sent-text -->
                              <br>
                              <strong><!-- TMPL_VAR author --></strong>
                              <small><!-- TMPL_VAR date --></small>
                              <small><a href="<!-- TMPL_VAR url -->">
                              See on <!-- TMPL_VAR domain -->
                              </a></small>
                              </p>
                           </div>
                        </div>
                     </article>
                  </div>
                  <!-- /TMPL_LOOP -->

               </article>
         </div>
         <!-- /TMPL_IF -->
      </div>

      <script>
      var sitesData = {
        labels: [<!-- TMPL_LOOP sites-stats -->'<!-- TMPL_VAR site -->',<!-- /TMPL_LOOP --> ],
        series: [<!-- TMPL_LOOP sites-stats --><!-- TMPL_VAR frequency -->,<!-- /TMPL_LOOP --> ]
      };
      var sitesOptions = {
        labelInterpolationFnc: function(value) {
          return value[0]
        }
      };
      var sitesResponsiveOptions = [
        ['screen and (min-width: 640px)', {
          chartPadding: 30,
          labelOffset: 100,
          labelDirection: 'explode',
          labelInterpolationFnc: function(value) {
            return value;
          }
        }],
        ['screen and (min-width: 1024px)', {
          labelOffset: 20,
          chartPadding: 20
        }]
      ];
      new Chartist.Pie('.ct-chart-sites', sitesData, sitesOptions, sitesResponsiveOptions);

        years = [<!-- TMPL_LOOP years -->'<!-- TMPL_VAR year -->',<!-- /TMPL_LOOP --> ];
        yearCounts = [<!-- TMPL_LOOP year-counts --><!-- TMPL_VAR count -->,<!-- /TMPL_LOOP --> ];
        new Chartist.Line('.ct-chart-trend', {labels: years, series: [yearCounts]}, sitesOptions);
      </script>
   </body>
</html>
